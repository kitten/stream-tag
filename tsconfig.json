{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "rootDir": "./src",
    "jsx": "react",
    "declaration": true,
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es2015",
    "noEmit": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "pretty": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/tests/**/*.ts"],
  "typeRoots": ["node_modules/@types"]
}
